<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head.partial.ejs"); %>
</head>
<body>
<header>
    <%- include("../partials/header.partial.ejs"); %>
</header>
<main>
    <form name="search">
        <div class="field has-addons">
            <p class="control has-icons-left">
                <input class="input" type="search" name="tags" placeholder="Search GIFs" value="<%= query ? query : "" %>" />
                <span class="icon is-small is-left">
                    <i class="fas fa-search"></i>
                </span>
            </p>
            <div class="control">
                <input type="submit" class="button is-info" />
            </div>
        </div>
    </form>

    <% if (gifs.length) { %>
    <div>
        <% for (const gif of gifs) { %>
            <div class="card has-background-dark is-inline-block">
                <div class="card-image">
                    <figure class="image is-128x128">
                        <a href=<%=`gif/${gif.fileUniqueId}`%> >
                            <img src="<%=`gif/${gif.fileUniqueId}/thumb`%>" alt="GIF thumbnail" class="thumb" />
                        </a>
                    </figure>
                </div>
            </div>
        <% } %>
    </div>
    <% } else { %>
        <h2 class="title">No GIFs found</h2>
    <% } %>
</main>
<footer>
    <%- include("../partials/footer.partial.ejs"); %>
</footer>
</body>
</html>
